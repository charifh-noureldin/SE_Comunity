<!DOCTYPE html>
<html lang="en">
      <%- include("./partials/head.ejs") %>
      
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="./styles.css">
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
</head>
  <body>
      <%- include("./partials/nav.ejs") %>
  <div class="create-order content">
    <h2>Create an Order </h2>
    <form action="/orders" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>

      <label for="subject">Subject:</label>
      <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="subject" name="subject">
        <option selected >Choose...</option>
        <option value="saab">Saab</option>
        <option value="fiat">Fiat</option>
        <option value="audi">Audi</option>
        </select>

      <label for="description">Description:</label>
      <textarea id="description" name="description" required></textarea>

      <label class="form-label" for="file">Default file input example</label>
      <input type="file" class="form-control" id="file" name="file" />

      <button class="btn btn-success">Submit Request</button>
      
    </form>
  </div>
    <%- include("./partials/page.ejs") %>
  </body>
</html>